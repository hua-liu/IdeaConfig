  </template>
  <template name="、****" value="/**&#10; * 修改日志:$user$($date$) -&gt; $todo$&#10; */" shortcut="ENTER" description="修改日志备注" toReformat="false" toShortenFQNames="true">
    <variable name="user" expression="user()" defaultValue="" alwaysStopAt="false" />
