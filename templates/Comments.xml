      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="、***" value="/**&#10; * @do $input$&#10; * @author $user$&#10; * @date $date$ $time$&#10; */" shortcut="ENTER" description="添加方法注释" toReformat="false" toShortenFQNames="true">
